{% extends 'base.html.twig' %}

{% block main %}
{#j'indique à mon twig que pour chaque catégorie de ma liste il faudra appliquer les mesures suivantes#}
{% for category in categories %}
    <article>
{#        La couleur de mon article sera celle que j'ai appliqué à sa caractéristique "color"#}
        <h2 style="color: {{ category.color }};">{{ category.title }}</h2>
        <a href="{{ path('show_category', {'id': category.id}) }}">Rencontre les animaux du Zoo</a>
    </article>
{% endfor %}


{% endblock %}